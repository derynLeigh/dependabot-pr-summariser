{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "paths": {
      "@types/*": ["./src/types/*"]
    },
    "target": "ES2024",
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "nodenext"
  }
}
